{
  "name":             "AlgoNews",
  "version":          "1.0.0",
  "homepage_url":     "https://github.com/DouweM/AlgoNews",

  "manifest_version": 2,

  "description": "Show fake headlines generated by Grant Slatton's algorithm on the Hacker News and hckr news frontpages.",

  "content_scripts": [
    {
        "matches":  ["http://hckrnews.com/", "http://www.hckrnews.com/"],
        "js":       ["vendor/underscore.js", "src/algonews.js", "src/hckrnews.js"]
    },
    {
        "matches":  ["https://news.ycombinator.com/"],
        "js":       ["vendor/underscore.js", "src/algonews.js", "src/newsycombinator.js"]
    }
  ],

  "permissions": [
    "http://grantslatton.com/hngen/"
  ]
}